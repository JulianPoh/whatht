<div class="col-lg-12 text-center">       
<h1>Posts</h1>
<% if user_signed_in? %>
<%= link_to 'Create New Post', new_post_path %>
<% else %>
You have to be signed in to create new posts.
<% end %>
</div>
<br>
<br>
<div class="container"> 
<div class="card-deck">
<% @posts.each do |post| %>
<% if post.category == "Creatures" %>
<div class="card text-white bg-dark mb-3" style="min-width: 15rem; max-width: 15rem;">
<% elsif post.category == "Objects" %>
<div class="card text-white bg-primary mb-3" style="min-width: 15rem; max-width: 15rem;">
<% elsif post.category == "Medical" %>
<div class="card text-white bg-success mb-3" style="min-width: 15rem; max-width: 15rem;">
<% end %>
  <div class="card-header">
    <h5><%= post.category %></h5>
  </div>
  <img class="card-img-top" src="<%= post.image %>" alt="Card image cap" style="height: auto; width: auto; max-height: 10rem;">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <p class="card-text"><%= post.body %><p>
  </div>
  <div class="card-footer text-center" style="text-decoration: none;">
  <% if current_user == (post.user) %>
    <a href="#" class="card-link active"><%= link_to 'View', post, {:style=>'color:#FFFFFF;', :class => "css_class"} %></a>
    <a href="#" class="card-link active"><%= link_to 'Edit', edit_post_path(post), {:style=>'color:#FFFFFF;', :class => "css_class"} %></a>
    <a href="#" class="card-link active"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %></td></a>
  <% else %>
    <a href="#" class="card-link active"><%= link_to 'View', post, {:style=>'color:#FFFFFF;', :class => "css_class"} %></a>
  <% end %>
  </div>
  <div class="card-footer text-muted">
    <%= post.created_at %>
  </div>
</div>
<% end %>
</div>
</div>



